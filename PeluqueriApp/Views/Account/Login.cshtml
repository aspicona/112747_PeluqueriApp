@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - PeluqueriApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-image: url('/images/background.jpeg'); background-size: cover; background-position: center; background-repeat: no-repeat; min-height: 100vh;">

    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="row shadow-md p-4 rounded" style="max-width: 1000px; width: 100%; background-color: #FF0202;">
            <!-- Imagen del logo -->
            <div class="col-md-7 d-flex align-items-center justify-content-center">
                <img src="/images/logo-removebg.png" alt="PeluqueriApp Logo" class="img-fluid" style="max-width: 80%;" />
            </div>
            
            <!-- Formulario de inicio de sesión -->
            <div class="col-md-5 align-items-center justify-content-center mt-3">
                <h4 class="text-center mb-4">INICIAR SESIÓN</h4>
               
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" />
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" name="rememberMe" id="rememberMe" class="form-check-input" />
                        <label class="form-check-label" for="rememberMe">Recordar sesión</label>
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Entrar</button>
                </form>

                <div class="mt-3 text-center">
                    ¿No tienes una cuenta? <a asp-action="Register" asp-controller="Account" style="color: black;">Regístrate aquí</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
