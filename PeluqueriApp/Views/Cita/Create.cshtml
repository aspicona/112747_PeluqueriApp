@model PeluqueriApp.Models.Cita

<h2>Crear Nueva Cita</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="IdCliente">Cliente</label>
        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.Clientes"></select>
        <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IdEmpleado">Empleado</label>
        <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.Empleados"></select>
        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IdEmpresa">Empresa</label>
        <select asp-for="IdEmpresa" class="form-control" asp-items="ViewBag.Empresas"></select>
        <span asp-validation-for="IdEmpresa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IdEstadoCita">Estado de Cita</label>
        <select asp-for="IdEstadoCita" class="form-control" asp-items="ViewBag.EstadosCita"></select>
        <span asp-validation-for="IdEstadoCita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Fecha">Fecha y Hora</label>
        <input asp-for="Fecha" type="datetime-local" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PrecioEstimado">Precio Estimado</label>
        <input asp-for="PrecioEstimado" class="form-control" />
        <span asp-validation-for="PrecioEstimado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PrecioFinal">Precio Final</label>
        <input asp-for="PrecioFinal" class="form-control" />
        <span asp-validation-for="PrecioFinal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
