@model CitaViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="Cliente">Cliente</label>
        @Html.DropDownListFor(m => m.IdCliente, ViewBag.Clientes as SelectList, "Seleccione un cliente", new { @class = "form-select" })
    </div>

    <div class="mb-3">
    <label for="Empleado">Empleado</label>
    @Html.DropDownListFor(m => m.IdEmpleado, ViewBag.Empleados as SelectList, "Seleccione un empleado", new { @class = "form-select" })
</div>

<div class="mb-3">
    <label for="Fecha">Fecha</label>
    <input type="date" asp-for="Fecha" class="form-control" />
</div>

<div class="mb-3">
    <label for="Horario">Horario</label>
    <select asp-for="HorarioSeleccionado" class="form-select">
        @foreach (var horario in ViewBag.HorariosDisponibles as List<string>)
        {
            <option value="@horario">@horario</option>
        }
    </select>
</div>


    <div class="mb-3">
        <label>Servicios</label>
        @foreach (var servicio in ViewBag.Servicios as IEnumerable<dynamic>)
        {
            <div>
                <input type="checkbox" name="ServiciosSeleccionados" value="@servicio.Id" />
                @servicio.Nombre
            </div>
        }
    </div>

    <!-- Botón para abrir el modal de productos -->
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#productosModal">
        Seleccionar Productos
    </button>
    
    <!-- Modal de productos -->
    <div class="modal fade" id="productosModal" tabindex="-1" aria-labelledby="productosModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productosModalLabel">Seleccionar Productos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @for (var i = 0; i < Model.ProductosDisponibles.Count; i++)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <!-- Checkbox para seleccionar un producto -->
                            <input type="checkbox" name="ProductosSeleccionados[@i].Seleccionado"
                                   id="ProductoSeleccionado_@i"
                                   value="true"
                                   class="form-check-input" />
                            <input type="hidden" name="ProductosSeleccionados[@i].Seleccionado" value="false" />

                            <!-- Nombre del producto -->
                            <label for="ProductoSeleccionado_@i" class="ms-2">@Model.ProductosDisponibles[i].NombreProducto</label>

                            <!-- Cantidad -->
                            <input type="number" name="ProductosSeleccionados[@i].Cantidad"
                                   value="@Model.ProductosDisponibles[i].Cantidad"
                                   placeholder="Cantidad"
                                   class="form-control ms-3" style="width: 100px;" />

                            <!-- ID del producto -->
                            <input type="hidden" name="ProductosSeleccionados[@i].ProductoId"
                                   value="@Model.ProductosDisponibles[i].ProductoId" />

                            <!-- Nombre del producto -->
                            <input type="hidden" name="ProductosSeleccionados[@i].NombreProducto"
                                   value="@Model.ProductosDisponibles[i].NombreProducto" />
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary mt-3">Crear Cita</button>
</form>
<script>
    document.getElementById("IdEmpleado").addEventListener("change", function () {
        const empleadoId = this.value;
        const fecha = document.getElementById("Fecha").value;

        fetch(`/Cita/GetAvailableSlots?empleadoId=${empleadoId}&fecha=${fecha}`)
            .then(response => response.json())
            .then(data => {
                const horarioSelect = document.getElementById("HorarioSeleccionado");
                horarioSelect.innerHTML = ""; // Limpiar horarios actuales

                data.forEach(horario => {
                    const option = document.createElement("option");
                    option.value = horario;
                    option.textContent = horario;
                    horarioSelect.appendChild(option);
                });
            });
    });
</script>
