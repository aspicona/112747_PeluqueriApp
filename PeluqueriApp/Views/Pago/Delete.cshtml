@model Pago

<h2>Eliminar Pago</h2>

<div>
    <h4>¿Está seguro de que desea eliminar este pago?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cita.Cliente.Apellido</dd>

        <dt class="col-sm-2">Fecha de Pago</dt>
        <dd class="col-sm-10">@Model.FechaPago.ToShortDateString()</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto</dd>

        <dt class="col-sm-2">Método de Pago</dt>
        <dd class="col-sm-10">@Model.MetodoDePago.Nombre</dd>

        <dt class="col-sm-2">Pagado</dt>
        <dd class="col-sm-10">@Model.Pagado</dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
