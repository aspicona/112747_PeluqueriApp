@using System.Globalization
@model IEnumerable<ProductoViewModel>

<h2>Listado de Productos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Costo</th>
            <th>Precio</th>
            <th>Stock Disponible</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.NombreProducto</td>
                <td>@producto.Descripcion</td>
                <td class="text-end">AR$ @producto.Costo.ToString("N2", new CultureInfo("es-AR"))</td>
                <td class="text-end">AR$ @producto.Precio.ToString("N2", new CultureInfo("es-AR"))</td>
                <td class="text-end">@producto.StockDisponible</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.ProductoId" class="text-primary me-2" title="Editar">
                        <i class="bi bi-pencil"></i> <!-- Ícono de lápiz -->
                    </a>
                    <a asp-action="Delete" asp-route-id="@producto.ProductoId" class="text-danger" title="Eliminar">
                        <i class="bi bi-trash"></i> <!-- Ícono de basura -->
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Nuevo Producto</a>
