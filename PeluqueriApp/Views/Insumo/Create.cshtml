@model Insumo

<h2 class="text-center mt-4">Crear Insumo</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnidadDeMedidaId">Unidad de Medida</label>
                    <select asp-for="UnidadDeMedidaId" class="form-control" asp-items="ViewBag.UnidadesDeMedida"></select>
                    <span asp-validation-for="UnidadDeMedidaId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CostoUnitario" class="form-label"></label>
                    <input asp-for="CostoUnitario" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="CostoUnitario" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StockDisponible" class="form-label"></label>
                    <input asp-for="StockDisponible" class="form-control" type="number" />
                    <span asp-validation-for="StockDisponible" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <br/>
                    <br/>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>
