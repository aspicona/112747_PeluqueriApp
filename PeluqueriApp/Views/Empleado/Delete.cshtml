@model Empleado

<h2>Eliminar Empleado</h2>

<div>
    <h4>¿Está seguro de que desea eliminar este empleado?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Empresa</dt>
        <dd class="col-sm-10">@Model.Empresa.Nombre</dd>

        <dt class="col-sm-2">Especialidad</dt>
        <dd class="col-sm-10">@Model.Especialidad.Descripcion</dd>

        <dt class="col-sm-2">Fecha de Ingreso</dt>
        <dd class="col-sm-10">@Model.FechaIngreso.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Horario Disponible</dt>
        <dd class="col-sm-10"> @Model.HorarioDesde - @Model.HorarioHasta</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
