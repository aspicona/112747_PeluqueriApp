<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PeluqueriApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PeluqueriApp.styles.css" asp-append-version="true" />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <style>
        @{
            // Color dinámico desde el ViewBag con valor por defecto
            var colorPrincipal = ViewBag.ColorPrincipal ?? "#ff0202";
        }
        #sidebar {
            background-color: #3A3A3A; 
            height: 100vh; /* Altura completa de la ventana */
        }

        #sidebar .nav-link {
            padding: 15px;
            border-radius: 0; /* Sin bordes redondeados */
            transition: background-color 0.3s ease, color 0.3s ease;
            color: white; /* Texto negro */
        }

        #sidebar .nav-link:hover {
            background-color: @colorPrincipal; /* Color dinámico o rojo por defecto */
            color: white; /* Texto blanco */
        }

        #sidebar .nav-link.active {
            background-color: @colorPrincipal; /* Color dinámico o rojo por defecto */
            color: white; /* Texto blanco */
        }

        #sidebar h4 {
            color: @colorPrincipal; /* Color dinámico o rojo por defecto */
            text-align: center; /* Centramos el texto */
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .nav-link {
            text-align: left; /* Alineamos texto e ícono a la izquierda */
        }

        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        .navbar {
            margin-bottom: 0; /* Eliminar espacio entre la barra de navegación y el contenido */
        }

        .container-fluid {
            padding: 0;
        }

        .navbar-brand {
            font-weight: bold;
            color: @colorPrincipal  !important;
        }
        /* Clase para la barra de navegación */
    .navbar-custom {
        background-color: #3A3A3A; /* Color de fondo gris humo */
        margin-bottom: 0 !important;
    }

    /* Estilo para los enlaces de la barra de navegación */
    .navbar-custom .nav-link {
        color: white !important; /* Color del texto por defecto */
        transition: background-color 0.3s ease, color 0.3s ease; /* Efecto de transición */
    }

    /* Efecto hover: cambia el fondo y color de texto */
    .navbar-custom .nav-link:hover {
        background-color: @colorPrincipal; /* Fondo del color principal */
        color: white !important; /* Asegura que el texto sea legible */
        border-radius: 5px; /* Bordes redondeados en el hover */
    }

    /* Botón de "Salir" personalizado */
    .navbar-custom .btn-dark {
        background-color: @colorPrincipal; /* Fondo del color principal */
        border: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .navbar-custom .btn-dark:hover {
        background-color: white; /* Cambia a blanco al pasar el mouse */
        color: @colorPrincipal; /* Cambia el texto al color principal */
    }
    .navbar-custom .container-fluid {
    padding-left: 20px; /* Espacio desde el borde izquierdo */
    padding-right: 20px; /* Espacio desde el borde derecho */
}
    a {
    text-decoration: none; /* Elimina el subrayado */
    }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PeluqueriApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="TermsAndConditions"><i class="bi bi-file-earmark-text mr-2"></i> Términos y Condiciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ"><i class="bi bi-question-circle mr-2"></i> Preguntas Frecuentes</a>
                    </li>
                </ul>
            </div>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display:inline">
                <button type="submit" class="btn btn-dark"><i class="bi bi-box-arrow-right"></i> Salir</button>
            </form>
        </div>
    </nav>
</header>
       

        <div class="container-fluid">
            <div class="row">
                <!-- Menú lateral -->
                <div class="col-md-2 shadow-sm" id="sidebar">
    <nav class="navbar navbar-expand-lg d-flex flex-column align-items-center">
        <!-- Logo centrado y más grande -->
        <div class="mb-3">
            <img src="@ViewBag.Logo" alt="Logo" style="height: 80px; display: block; margin: 0 auto;">
        </div>
        <!-- Nombre de la empresa con color principal -->
        <h4 style="color: @ViewBag.ColorPrincipal ?? '#ff0202'; text-align: center;">
            @ViewBag.EmpresaNombre
        </h4>
    </nav>
    <nav class="nav flex-column" style="color:black; text-align:center">
        @if (User.IsInRole("SuperAdmin"))
        {
            <a class="nav-link" asp-area="" asp-controller="Empresa" asp-action="Index">
                <i class="bi bi-building"></i> Empresas
            </a>    
        }
        <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="Index">
            <i class="bi bi-box-seam mr-2"></i> Productos
        </a>
        <a class="nav-link" asp-area="" asp-controller="Insumo" asp-action="Index">
            <i class="bi bi-tools mr-2"></i> Insumos
        </a>
        <a class="nav-link" asp-area="" asp-controller="Servicio" asp-action="Index">
            <i class="bi bi-scissors mr-2"></i> Servicios
        </a>
        <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="Index">
            <i class="bi bi-people mr-2"></i> Clientes
        </a>
        <a class="nav-link" asp-area="" asp-controller="Cita" asp-action="Index">
            <i class="bi bi-calendar-check mr-2"></i> Citas
        </a>
        <a class="nav-link" asp-area="" asp-controller="Empleado" asp-action="Index">
            <i class="bi bi-person-badge mr-2"></i> Empleados
        </a>
        <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="Index">
            <i class="bi bi-credit-card mr-2"></i> Pagos
        </a>
        <a class="nav-link" asp-area="" asp-controller="Reporte" asp-action="Index">
            <i class="bi bi-graph-up mr-2"></i> Reportes
        </a>
    </nav>
</div>


                <!-- Contenido principal -->
                <div class="col-md-10">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - PeluqueriApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const links = document.querySelectorAll("#sidebar .nav-link");

            // Al hacer clic, desactiva todos los enlaces y activa el clicado
            links.forEach(link => {
                link.addEventListener("click", function () {
                    links.forEach(l => l.classList.remove("active"));
                    this.classList.add("active");
                });
            });
        });
    </script>
</body>
</html>
