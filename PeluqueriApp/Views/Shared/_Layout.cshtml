<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PeluqueriApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PeluqueriApp.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PeluqueriApp</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                    <form asp-action="Logout" method="post" style="display:inline">
                        <button type="submit" class="btn btn-link">Logout</button>
                    </form>
                </div>
            </nav>
        </header>

        <!-- Menú lateral -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <nav class="nav flex-column bg-light p-3">
                        <h4>Menú</h4>
                        <a class="nav-link" asp-area="" asp-controller="Empresa" asp-action="Index">Empresas</a>
                        <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a>
                        <a class="nav-link" asp-area="" asp-controller="Insumo" asp-action="Index">Insumos</a>
                        <a class="nav-link" asp-area="" asp-controller="Servicio" asp-action="Index">Servicios</a>
                        <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        <a class="nav-link" asp-area="" asp-controller="Cita" asp-action="Index">Citas</a>
                        <a class="nav-link" asp-area="" asp-controller="Empleado" asp-action="Index">Empleados</a>
                        <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="Index">Pagos</a>
                    </nav>
                </div>
                
                <!-- Contenido principal -->
                <div class="col-md-9">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - PeluqueriApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
